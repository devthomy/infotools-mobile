<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:Adatea"
       x:Class="Adatea.AppShell">

    <TabBar>
        <ShellContent Title="Connexion"
                      Icon="login_icon.png"
                      Route="LoginPage"
                      ContentTemplate="{DataTemplate pages:LoginPage}" />

        <ShellContent Title="Rendez-Vous"
                      Icon="rendezvous_icon.png"
                      Route="MainPage"
                      ContentTemplate="{DataTemplate pages:MainPage}" />
        
        <ShellContent Title="Ajouter rendez-vous"
                      Icon="rendezvous_icon.png"
                      Route="MainPage"
                      ContentTemplate="{DataTemplate pages:AddAppointment}" />
    </TabBar>
</Shell>
